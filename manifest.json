{
  "manifest_version": 2,
  "name": "MalURL Shield - 90%+ Malicious URL Blocker",
  "version": "1.2.0",
  "description": "Blocks malicious URLs with monthly auto-updates. Firefox & Opera only.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "<all_urls>",
    "alarms"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Malicious URL Detector"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
